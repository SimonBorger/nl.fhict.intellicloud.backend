<?xml version="1.0"?>
<configuration>

  <appSettings>
    <add key="Data.WordStore.Catalog" value="master" />
    <add key="Data.WordStore.DataSource" value="(localdb)\Projects" />
    <add key="Data.WordStore.Password" value="" />
    <add key="Data.WordStore.UserId" value="" />
  </appSettings>
  
  <system.web>
    <compilation debug="true" targetFramework="4.5" />
    <httpRuntime targetFramework="4.5"/>
  </system.web>
  
  <system.serviceModel>
    <behaviors>
      <serviceBehaviors>
        <behavior>
          <serviceMetadata httpGetEnabled="true"/>
          <serviceDebug includeExceptionDetailInFaults="true" />
        </behavior>
      </serviceBehaviors>
    </behaviors>

    <bindings>
      <wsHttpBinding>
        <binding hostNameComparisonMode="StrongWildcard">
          <security>
            <transport clientCredentialType="None"/>
          </security>
        </binding>
      </wsHttpBinding>
    </bindings>
    
    <protocolMapping>
        <add binding="wsHttpBinding" scheme="http" />
    </protocolMapping>

    <serviceHostingEnvironment aspNetCompatibilityEnabled="false" multipleSiteBindingsEnabled="true">
      <serviceActivations>
        <add relativeAddress="WordService.svc" service="IntelliCloud.WordStore.Service.WordService"/>
      </serviceActivations>
    </serviceHostingEnvironment>
  </system.serviceModel>
  
  <system.webServer>
    <modules runAllManagedModulesForAllRequests="true"/>
  </system.webServer>

</configuration>
